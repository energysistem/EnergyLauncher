<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dip"
        android:descendantFocusability="blocksDescendants"
        android:focusable="false"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/wifi_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingStart="20dp"
                android:contentDescription="@string/clock_wifi_icon_description"
                android:src="@drawable/stat_sys_tether_wifi_0"
                android:layout_marginRight="5dp" />

            <ImageView
                android:id="@+id/ethernet_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:contentDescription="@string/clock_ethernet_icon_description"
                android:src="@android:drawable/stat_notify_error" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="@color/blanco"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="sans-serif-thin"
                android:text="@string/clock_default_time"
                android:textColor="@color/blanco"
                android:textSize="@dimen/clock_time_text_size" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/clock_default_date"
                android:textColor="@color/blanco"
                android:paddingStart="10dp"
                android:textSize="@dimen/clock_date_text_size" />

        </LinearLayout>

    </LinearLayout>
</merge>
